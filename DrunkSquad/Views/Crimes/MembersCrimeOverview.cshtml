@model DrunkSquad.Models.Faction.FactionCrimesOverview

@{
    ViewData ["Title"] = "Members' Crime Overview";
}

<div>
    <div class="container card">
        <div class="row">
            <h1 class="card-headers"><b>Member Overview</b></h1>
        </div>

        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Crime Exp Rank</th>
                        <th>Name</th>
                        <th>Total Money Gained</th>
                        <th>Total Rep Gained</th>
                        <th>Success Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rank in Model.CERanks) {
                        var crimes = Model.GetCrimesForUser (rank.Member.MemberID);

                        <tr>
                            <td>@rank.Rank</td>
                            <td>@rank.Member.Name</td>
                            <td>@crimes.TotalMoneyGained.ToString("C")</td>
                            <td>@crimes.TotalRepGained.ToString("N0")</td>
                            <td>@crimes.SuccessRate.ToString("P")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
