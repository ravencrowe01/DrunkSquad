@model DrunkSquad.Models.Faction.FactionCrimes

@using DrunkSquad.Logic.Extensions;

@{
    ViewData ["Title"] = "OC Overview";
}

<div>
    <div>
        <div>Total Money Gained: @Model.TotalMoneyGained</div>
        <div>Total Rep Gained: @Model.TotalRepGained</div>
        <div>Success Rate: @Model.SuccessRate</div>
    </div>
    <table>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Time Started</th>
            <th>Time Ready</th>
            <th>Participants</th>
            <th>Money Gained</th>
            <th>Respect Gained</th>
        </tr>
        @foreach(var crime in Model.Crimes) {
            <tr>
                <td>@crime.Name</td>
                <td>
                    @{
                        var display = string.Empty;

                        if(crime.Initiated) {
                            if(crime.Success) {
                                display = "Success";
                            }
                            else {
                                display = "Failed";
                            }
                        }
                        else {
                            var readyTimeOffset = DateTimeOffset.FromUnixTimeSeconds(crime.TimeReady);
                            var readyTime = readyTimeOffset.UtcDateTime;

                            if(DateTime.UtcNow < readyTime) {
                                display = "Not Ready";
                            }
                            else {
                                display = "Ready";
                            }
                        }

                        <p>@display</p>
                    }
                </td>
                <td>@DateTimeOffset.FromUnixTimeSeconds(crime.TimeStarted).UtcDateTime.ToString()</td>
                <td>@DateTimeOffset.FromUnixTimeSeconds(crime.TimeReady).UtcDateTime.ToString()</td>
                <td>@string.Join(',', crime.ParticipantNames)</td>
                @{
                    if(crime.Initiated) {
                        <td>@crime.MoneyGain</td>
                        <th>@crime.RespectGain</th>
                    }
                    else {
                        <td>Waiting...</td>
                        <td>Waiting...</td>
                    }
                }
            </tr>
        }
    </table>
</div>